<%= form_for @job do |f| %>
  <% if @job.errors.any? %>
    <ul>
      <% @job.errors.full_messages.each do |msg|%>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br>
  
  <%= f.label :category %><br>
  <%= f.select(:category, Job.categories.keys.map{ |category| [category.titleize, category] }) %>
  <br><br>
  
  <%= f.label :company %><br>
  <%= f.text_field :company %><br><br>
  
  <%= f.label :description %><br>
  <%= f.text_area :description %><br><br>
  
  <%= f.label :url %><br>
  <%= f.text_field :link %><br><br>
  
  <%= f.submit %>
<% end %>
<br>
<%= link_to "Back", jobs_path %>